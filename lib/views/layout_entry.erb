        <% end %>

      <!-- <li><a href="#">Log Out</a></li> -->

    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <li><input type="search" placeholder="Search Entries"></li>
      <li><button type="button" class="button">Search</button></li>
    </ul>
  </div>
</div>




